<body>
    <div style="position: absolute; width: 350px; height: 300px; margin-top: 200px; right:0px">
        <canvas id="Chart1"></canvas>
    </div>
    <script>
        const labels = [
                '시간1',
                '시간2',
                '시간3',
                '시간4'              
            ];          
           
            const data = {
            labels: labels,
            datasets: [
                {
                label: '목표생산량',
                data: [100, 100, 100, 100],
                borderColor: 'rgb(237, 125, 49)',
                backgroundColor: 'rgb(237, 125, 49)',
                },
                {
                label: '생산량',
                data: [13,25,57,78],
                borderColor: 'rgb(91, 155, 213)',
                backgroundColor: 'rgb(91, 155, 213)',
                }
            ]
            };
            const config = {
            type: 'line',
            data: data,
            options: {
                responsive: true,
                plugins: {
                legend: {
                    position: 'top',
                },
                title: {
                    display: true,
                    text: '현황확인'
                }
                }
            },
            };
            var myChart = new Chart(
                document.getElementById('chart1'),
                config
            );
    </script>
